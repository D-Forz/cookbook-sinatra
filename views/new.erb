<div class="card m-3">
  <div class="card-header">
    <h1 class="text-center">Add a recipe</h1>
  </div>
  <div class="card-body">
    <form action="/recipes" method="post">
      <div>
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" class="form-control">
      </div>
      <div>
        <label for="description" class="form-label">Description</label>
        <input type="text" name="description" class= "form-control">
      </div>
      <div class="row">
        <div class="col">
          <label for="prep_time" class="form-label">Prep time</label>
          <input type="text" name="prep_time" class="form-control">
        </div>
        <div class="col">
          <label for="name" class="form-label">Rating</label>
          <input type="text" name="rating" class= "form-control">
        </div>
      </div>
      <div class="row">
        <div class="col m-3">
          <input type="submit" class="btn btn-primary" value="Add to cookbook">
        </div>
        <div class="col m-3">
          back to <a href="/">cookbook</a>
        </div>
      </div>
    </form>
  </div>
</div>
